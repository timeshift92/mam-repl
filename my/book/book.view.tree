$my_book $mol_view
	sub <= pages_wrapped /$mol_view
	minimal_width 0
	pages /$mol_view
	plugins /$mol_plugin
		<= Meter $mol_meter
			width => width
		<= Touch $mol_touch
			swipe_from_left?val <=> event_front_up?val null
			swipe_to_left?val <=> event_front_down?val null
	Page!index $my_book_page
		Sub <= page!index null
		visible <= page_visible!index true
	Placeholder $my_book_placeholder
		title <= title

$my_book_placeholder $mol_view
	minimal_width 400
	attr *
		^
		tabindex null

$my_book_page $mol_ghost
	attr_static *
		^
		tabindex 0
		my_book_page_visible true
	attr *
		^
		my_book_page_focused <= focused
		my_book_page_visible <= visible true
